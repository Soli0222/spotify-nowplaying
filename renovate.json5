{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    ":dependencyDashboard"
  ],
  timezone: 'Asia/Tokyo',
  rangeStrategy: 'bump',
  prConcurrentLimit: 20,
  prHourlyLimit: 10,
  "reviewers": [
    "Soli0222"
  ],
  semanticCommits: 'enabled',
  prCreation: 'immediate',
  rebaseWhen: 'auto',
  dependencyDashboard: true,
  vulnerabilityAlerts: {
    enabled: true,
    labels: [
      'security',
    ],
  },
  packageRules: [
    {
      matchManagers: [
        'github-actions',
      ],
      commitMessageTopic: 'GitHub Action {{depName}}',
      automerge: true,
    },
    {
      matchManagers: [
        'gomod',
      ],
      commitMessageTopic: 'Go {{depName}}',
      automerge: false,
    },
    {
      matchManagers: [
        'npm',
      ],
      commitMessageTopic: 'npm {{depName}}',
      automerge: false,
      groupName: 'frontend dependencies',
      matchFileNames: ['frontend/**'],
    },
    {
      matchManagers: [
        'npm',
      ],
      matchDepTypes: ['devDependencies'],
      matchFileNames: ['frontend/**'],
      commitMessageTopic: 'npm dev {{depName}}',
      automerge: true,
      groupName: 'frontend dev dependencies',
    },
    {
      matchManagers: [
        'npm',
      ],
      matchPackagePatterns: ['^@types/'],
      matchFileNames: ['frontend/**'],
      automerge: true,
      groupName: 'frontend type definitions',
    },
    {
      matchManagers: [
        'npm',
      ],
      matchPackagePatterns: ['^vitest', '^@vitest/', '^@testing-library/'],
      matchFileNames: ['frontend/**'],
      automerge: true,
      groupName: 'frontend testing',
    },
    {
      matchManagers: [
        'npm',
      ],
      matchPackagePatterns: ['^eslint', '^typescript-eslint'],
      matchFileNames: ['frontend/**'],
      automerge: true,
      groupName: 'frontend linting',
    },
    {
      matchManagers: [
        'docker-compose',
        'dockerfile',
      ],
      commitMessageTopic: 'Docker {{depName}}',
      automerge: false,
    },
  ],
}