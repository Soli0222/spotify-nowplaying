# Server ports
PORT=8080
METRICS_PORT=9090

# Misskey server URI (for legacy /note endpoint)
SERVER_URI=<misskey-server>.tld

# Spotify OAuth
SPOTIFY_CLIENT_ID=xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
SPOTIFY_CLIENT_SECRET=xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# === Frontend & API features ===

# Base URL for OAuth callbacks (used for all redirect URIs)
BASE_URL=https://<spn-host>.tld

# PostgreSQL connection (required for new features)
# Either set DATABASE_URL directly, or set these to auto-construct it
POSTGRES_USER=spotify
POSTGRES_PASSWORD=spotify
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
POSTGRES_DB=spotify_nowplaying

# JWT secret for session management (use a strong random string in production)
JWT_SECRET=your-secret-key-change-in-production

# Token encryption key (32-byte base64-encoded string)
TOKEN_ENCRYPTION_KEY=your-32-byte-base64-encoded-key

# Environment (set to 'production' to enable secure cookies)
ENV=development

# App name shown in MiAuth
APP_NAME=Spotify NowPlaying

# Twitter OAuth 2.0 (required for API-based Twitter posting)
TWITTER_CLIENT_ID=your_twitter_client_id
TWITTER_CLIENT_SECRET=your_twitter_client_secret

# Twitter integration restrictions (optional)
# TWITTER_ENABLED=true                    # Set to 'false' to completely disable Twitter integration
# TWITTER_REQUIRE_MISSKEY=false           # Set to 'true' to require Misskey connection before Twitter
# TWITTER_ALLOWED_HOSTS=misskey.tld,example.tld  # Comma-separated list of allowed Misskey hosts (empty = all)
